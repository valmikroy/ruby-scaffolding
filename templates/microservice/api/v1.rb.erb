module RESTAPINAME
  class V1 < Grape::API
    format :json
    version 'v1', using: :path, vendor: 'restapiname', format: :json

    desc 'Returns the current API version, v1.'
    get '/' do
      ok 200, 'v1'
    end

    Dir[File.expand_path('../../api/ns1/v1/*.rb', __FILE__)].each do |handler|
      require handler
    end
    mount NS1
    add_swagger_documentation
  end
end
